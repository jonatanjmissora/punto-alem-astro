<style>
  .section_data {
    display: flex;
    justify-content: center;
    gap: 7vw;
    padding: 10rem 0;
    color: var(--blue);
  }
  .icon {
    width: 3.75rem;
    height: 3.5rem;
    display: grid;
    place-items: center;
  }
  .mail_icon {
    width: 3.75rem;
    height: 3.5rem;
    display: grid;
    place-items: center;
    padding: 0.25rem 0;
  }
  .socials {
    display: flex;
}
.title {
  font-size: 2rem;
  font-weight: 400;
  color: var(--gold);
}

p {
  text-align: center;
  font-weight: 400;
  line-height: 2;
  font-size: 1rem;
}

a {
  padding: 0 0.5rem;
  transition: color 0.35s ease, background 0.35s ease;
  border-radius: 1rem;
}

a:hover {
  background: var(--blue);
  color: var(--light-gold);
}
</style>