<style>
  .hero {
  height: 100vh;
  height: 100dvh;
  /* background: linear-gradient(to bottom, rgb(240, 240, 255), rgb(253, 253, 255)); */
}

.image_container {
  margin-top: var(--navbar-desktop-height);
  height: 65vh;
  width: 100vw;
}

.image_container {
  background: url("/portada1.webp");
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  animation: play 36s ease infinite;
  animation-delay: 4s;
}

@keyframes play {
  17% {
    background: url("/portada4.webp");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

  34% {
    background: url("/portada5.webp");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

  51% {
    background: url("/portada8.webp");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

  68% {
    background: url("/portada9.webp");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

  85% {
    background: url("/portada10.webp");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

  100% {
    background: url("/portada1.webp");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }

}

.image {
  object-fit: cover;
  object-position: 0% 60%;
  width: 100%;
  height: 100%;
}

.text_container {
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.logo_container {
  height: 13vw;
  width: auto;
}

.logo {
  height: 100%;
  width: 100%;
}

.title {
  /* font-size: 6rem;
  font-weight: 300;
  background: linear-gradient(165deg, rgb(245, 236, 170), rgb(100, 85, 9));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent; */
  display: none;
}

.sub_title {
  /* font-size: 1.5rem;
  margin-bottom: 2rem;
  color: #575757;
  font-weight: 400; */
  display: none;
}


.footer {
  font-weight: 500;
  color: var(--blue);
  margin-top: 0.5rem;
}

.footer span {
  margin: 1rem;
  font-size: 1rem;
}

@media (max-width: 1400px) {
  /* .image_container {
    height: 65vh;
  }

  .logo_container {
    height: 15vw;
  } */
}

@media (max-width: 760px) {
  .image {
    object-position: center;
  }

  .logo_container {
    height: 50vw;
    width: 100vw;
  }

  .footer span {
    margin: 0.5rem;
  }
}
</style>