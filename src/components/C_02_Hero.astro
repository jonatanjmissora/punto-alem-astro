---
import { Image } from "astro:assets";
import { FramerReveal } from "./FramerReveal";
import HeroLogo from "../assets/svg/HeroLogo.astro";
---

<section class="hero" id="inicio">
  <div class="image_container_bg">
    <div class="image_container"></div>
  </div>

  <div class="hero_text_container">
    <FramerReveal
      className="logo_container"
      options={{ from: "top", duration: "1" }}
      client:visible
    >
      <HeroLogo />
    </FramerReveal>
    <h1 class="title">Punto Alem</h1>
    <h2 class="sub_title">EVENTOS & CATERING</h2>
    <FramerReveal
      className="footer"
      options={{ from: "bottom", amount: "20", delay: "0.5", margin: "0" }}
      client:visible
    >
      <span class="footer_span">Salon</span>
      <span class="footer_span">-</span>
      <span class="footer_span">Livings</span>
      <span class="footer_span">-</span>
      <span class="footer_span">Jardin</span>
      <span class="footer_span">-</span>
      <span class="footer_span">Aire Libre</span>
    </FramerReveal>
  </div>
</section>

