---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>

	@font-face {
		font-family: 'Poppins';
  src: url('/font/Poppins-Black.ttf') format('ttf');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
	}

	:root {
		--body-bg: rgb(250, 250, 255);
		--white: #e1e1e1;
		--black: #313131;
		--navbar-desktop-height: 3rem;
		--gold: #cca965;
		--light-gold: rgb(242, 232, 211);
		--blue: #192d4d;
		overflow-x: hidden;
	}

	*,
	*::before,
	*::after {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		scroll-behavior: smooth;
		outline: none;
		text-decoration: none;
		list-style: none;
		user-select: none;
	}

	html {
		font-size: calc(0.4vw + 1vh + 0.15vmin);
		line-height: 1.5;
		-webkit-text-size-adjust: 100%;
		scroll-padding-top: calc(var(--navbar-desktop-height) - 1px);
		overflow-x: hidden;
		font-family: 'Poppins', sans-serif;
	}

	body {
		min-height: 100vh;
		overflow-x: hidden;
		letter-spacing: 2px;
		-webkit-font-smoothing: antialiased;
		text-rendering: optimizeSpeed;
		background: var(--body-bg);
		color: var(--black);
		position: relative;
	}

	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		overflow-wrap: break-word;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		letter-spacing: 4px;
	}

	code,
	pre {
		font-family: monospace, monospace;
		font-size: 1em;
	}

	b,
	strong {
		font-weight: bolder;
	}

	img,
	picture,
	video,
	canvas,
	svg {
		display: block;
		max-width: 100%;
	}

	a,
	button,
	input,
	select,
	textarea {
		font-family: inherit;
		font-size: 100%;
		font: inherit;
		color: inherit;
		line-height: 1.35;
		padding: 0.3rem 0.5rem;
		border-radius: 0.5rem;
		border: 1px solid gray;
	}

	a {
		border: none;
	}

	button,
	input[type="submit"] {
		cursor: pointer;
		font-weight: bolder;
		letter-spacing: 3px;
		font-family: "Poppins", sans-serif;
		border: 1px solid gray;
		border-radius: 0.5rem;
		padding: 0.5em 1em;
	}

	[type="number"]::-webkit-inner-spin-button,
	[type="number"]::-webkit-outer-spin-button {
		height: auto;
	}

	[type="search"] {
		-webkit-appearance: textfield;
		appearance: textfield;
		/* 1 */
		outline-offset: -2px;
		/* 2 */
	}

	[type="search"]::-webkit-search-decoration {
		-webkit-appearance: none;
	}

	::-webkit-scrollbar {
		/* width: 0px; */
	}

	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}

	html.lenis {
		height: auto;
	}

	.lenis.lenis-smooth {
		scroll-behavior: auto;
	}

	.lenis.lenis-smooth [data-lenis-prevent] {
		overscroll-behavior: contain;
	}

	.lenis.lenis-stopped {
		overflow: hidden;
	}

	.lenis.lenis-scrolling iframe {
		pointer-events: none;
	}
</style>
